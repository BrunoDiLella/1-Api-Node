    "paths":{
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Create a category",
                "description": "Create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Categoria name",
                                    "description": "Categoria de exemplo"
                                }
                                
                            }
                        }
                    }        
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category alreadys exists"
                    }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary": "Get all categories",
                "description": "Get all categories",
                "responses":{
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
